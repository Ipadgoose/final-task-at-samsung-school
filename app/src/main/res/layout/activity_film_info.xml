<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edurado.MyFilms.FilmInfoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#66CDAA">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F3F0DE">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Название"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/MyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Матрица"
                android:textStyle="italic"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F3F0DE">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Год"
                    android:layout_gravity="center"
                    android:textSize="40dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/MyYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2002"
                android:textSize="35dp"
                android:textStyle="italic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F3F0DE">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Оценка Кинопоиска"
                    android:textSize="39dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/MyBallKinopoisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.66"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textStyle="italic"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F3F0DE">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Оценка игры актеров"
                    android:textStyle="bold"
                    android:textSize="37dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ActorBall1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:hint="1"
                        android:src="@drawable/star"
                        android:layout_gravity="center"
                        android:textSize="65dp"
                        android:textStyle="italic"
                        />
                    <ImageView
                        android:id="@+id/ActorBall2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:hint="1"
                        android:src="@drawable/emptystar"
                        android:layout_gravity="center"
                        android:textSize="65dp"
                        android:textStyle="italic"
                        />
                    <ImageView
                        android:id="@+id/ActorBall3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:hint="1"
                        android:src="@drawable/emptystar"
                        android:layout_gravity="center"
                        android:textSize="65dp"
                        android:textStyle="italic"
                        />

                    <ImageView
                        android:id="@+id/ActorBall4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:hint="1"
                        android:src="@drawable/emptystar"
                        android:layout_gravity="center"
                        android:textSize="65dp"
                        android:textStyle="italic"
                        />
                    <ImageView
