                    android:layout_gravity="center"
                    android:textSize="65dp"
                    android:textStyle="italic"
                    />
                <ImageView
                    android:id="@+id/InstallationBall8"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:hint="1"
                    android:src="@drawable/emptystar"
                    android:layout_gravity="center"
                    android:textSize="65dp"
                    android:textStyle="italic"
                    />
                <ImageView
                    android:id="@+id/InstallationBall9"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:hint="1"
                    android:src="@drawable/emptystar"
                    android:layout_gravity="center"
                    android:textSize="65dp"
                    android:textStyle="italic"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F3F0DE">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ваш личный отзыв о фильме"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Myreview"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textStyle="italic"
                    android:text="   "
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/kinopoiskButtonInInfoFilmActivity"
                android:onClick="onClickKinoPoiskGoFilmInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CТРАНИЦА НА КИНОПОИСКЕ"
                android:background="#F5CA7E"
                />
            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#D95551"
                android:onClick="onClickDelete"
                android:text="УДАЛИТЬ ФИЛЬМ ИЗ КОЛЛЕКЦИИ"
                android:textStyle="bold"/>




        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>