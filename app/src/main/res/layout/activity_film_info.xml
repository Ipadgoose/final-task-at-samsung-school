                        android:layout_height="40dp"
                        android:hint="1"
                        android:src="@drawable/emptystar"
                        android:layout_gravity="center"
                        android:textSize="65dp"
                        android:textStyle="italic"
                        />
                    <ImageView
                        android:id="@+id/ActorBall6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:hint="1"
                        android:src="@drawable/emptystar"
                        android:layout_gravity="center"
                        android:textSize="65dp"
                        android:textStyle="italic"
                        />
                    <ImageView
                        android:id="@+id/ActorBall7"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:hint="1"
                        android:src="@drawable/emptystar"
                        android:layout_gravity="center"
                        android:textSize="65dp"
                        android:textStyle="italic"
                        />
                    <ImageView
                        android:id="@+id/ActorBall8"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:hint="1"
                        android:src="@drawable/emptystar"
                        android:layout_gravity="center"
                        android:textSize="65dp"
                        android:textStyle="italic"
                        />
                    <ImageView
                        android:id="@+id/ActorBall9"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:hint="1"
                        android:src="@drawable/emptystar"
                        android:layout_gravity="center"
                        android:textSize="65dp"
                        android:textStyle="italic"
                        />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F3F0DE">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Оценка сюжета"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/PlotBall1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:hint="1"
                        android:src="@drawable/star"
                        android:textSize="65dp"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/PlotBall2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:hint="1"
                        android:src="@drawable/emptystar"
                        android:textSize="65dp"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/PlotBall3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
